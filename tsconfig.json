{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "ES6",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"]
}
